# Server Configuration
PORT=8080
ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=boddle
DB_PASSWORD=password
DB_NAME=lmsprod
DB_SSL_MODE=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-minimum-32-characters-long
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-here-minimum-32-characters-long
JWT_ACCESS_TOKEN_TTL=6h
JWT_REFRESH_TOKEN_TTL=720h

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Clever SSO
CLEVER_CLIENT_ID=your-clever-client-id
CLEVER_CLIENT_SECRET=your-clever-client-secret
CLEVER_REDIRECT_URL=http://localhost:8080/auth/clever/callback

# iCloud Sign In
ICLOUD_SERVICE_ID=com.boddle.auth
ICLOUD_TEAM_ID=your-team-id
ICLOUD_KEY_ID=your-key-id
ICLOUD_PRIVATE_KEY_PATH=/secrets/icloud_private_key.p8
ICLOUD_REDIRECT_URL=http://localhost:8080/auth/icloud/callback

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# Rate Limiting
RATE_LIMIT_WINDOW=10m
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_LOCKOUT_DURATION=15m
